datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Course {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  name        String
  subject     String
  description String?
  teacher     String?

  tests       Test[]       @relation("CourseTest")
  assignments Assignment[] @relation("CourseAssignment")

  userId String
  User   User   @relation(fields: [userId], references: [providerId])
}

model Test {
  id          String   @id @default(uuid())
  name        String
  description String?
  dueDate     DateTime

  course   Course @relation(name: "CourseTest", fields: [courseId], references: [id])
  courseId String
}

model Assignment {
  id          String   @id @default(uuid())
  name        String
  description String?
  dueDate     DateTime

  course   Course @relation(name: "CourseAssignment", fields: [courseId], references: [id])
  courseId String
}

model User {
  providerId String   @id // ex: google|12841298491258102521
  createdAt  DateTime @default(now())
  email      String   @unique
  name       String
  courses    Course[]
}
